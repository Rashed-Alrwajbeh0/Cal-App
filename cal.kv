<Button>
    background_notmal: ""
    background_color: (65/255,61/255,61/255,1)
<calculator> 
    BoxLayout :
        size: root.width,root.height
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.4
            Label:
                size_hint_y: .3
                text: "Rashed  Alrwajbeh  &  Obaidah Hatamleh"
                font_size: 22
                bold: True
                italic: True
                outline_color: (0,0,0,1)
                outline_width: 5

                boled: True
                canvas.before:
                    Color:
                        rgba: (4/255,100/255,119/255,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: all
                color: (224/255,243/255,241/255,1)
            Label:
                text: ""
                font_size: 35
                canvas.before:
                    Color:
                        rgba: (0,0,0,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: calculations
        
        FloatLayout:


            BoxLayout:
                size_hint: 1,0.2
                pos_hint: {"top": 1}
                spacing: 0
                Button :
                    text: "%"
                    font_size: 30
                    id: persantege
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "C"
                    font_size: 30
                    id: empty
                    on_press: root.clear()
                Button :
                    text: "<--"
                    font_size: 30
                    id: back
                    on_press: root.delete()
                    on_press: root.delete2()
                Button :
                    text: "/"
                    font_size: 30
                    id: ddd
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                    on_press: root.calculate(self.text)
            GridLayout:
                size_hint: 0.75,0.8
                pos_hint: {"x":0,"y":0}
                cols:3
                rows:4
                Button :
                    text: "9"
                    font_size: 30
                    id: nine
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "8"
                    font_size: 30
                    id: eight
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "7"
                    font_size: 30
                    id: seven
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "6"
                    font_size: 30
                    id: sex
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "5"
                    font_size: 30
                    id: five
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "4"
                    font_size: 30
                    id: four
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "3"
                    font_size: 30
                    id: three
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "2"
                    font_size: 30
                    id: tow
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "1"
                    font_size: 30
                    id: one
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "+/-"
                    font_size: 30
                    id: p_n
                Button :
                    text: "0"
                    font_size: 30
                    id: zero
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                Button :
                    text: "."
                    font_size: 30
                    id: dot
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)

            BoxLayout:
                size_hint: 0.25,0.8
                pos_hint: {"x": .75,"top":.8}
                orientation: "vertical" 
                Button :
                    text: "+"
                    font_size: 30
                    id: plus
                    on_press: root.view(self.text)
                    on_press: root.calculate(self.text)
                Button :
                    text: "-"
                    font_size: 30
                    id: minas
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                    on_press: root.calculate(self.text)
                Button :
                    text: "*"
                    font_size: 30
                    id: multiply
                    on_press: root.view(self.text)
                    on_press: root.add_nums(self.text)
                    on_press: root.calculate(self.text)
                Button :
                    text: "="
                    font_size: 30
                    id: equal
                    on_press: root.eq()
        
            



